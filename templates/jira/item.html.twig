<div class="list-group-item list-group-item-action">
    <a href="{{ ticket.webLink }}" class="text-decoration-none text-body stretched-link" target="_blank">
        <h5 class="m-0">{{ ticket.key }}: {{ ticket.fields.summary }}</h5>
        <div class="my-3">
            <div>
                <b>Status:</b> {{ ticket.fields.status.name }}
            </div>
            <div>
                <b>Priority:</b> {{ ticket.fields.priority.name }}
            </div>
        </div>

        <div class="d-flex">
            <div class="mx-1">
                <b>Created:</b> {{ ticket.fields.created|date('d-m-Y H:i:s') }}
            </div>
            <div class="mx-1">
                <b>Updated:</b> {{ ticket.fields.updated|date('d-m-Y H:i:s') }}
            </div>
        </div>
    </a>
</div>
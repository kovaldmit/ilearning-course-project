{% extends 'layout/page-center.html.twig' %}

{% block title %}Tag Cloud{% endblock %}

{% block content %}
    <div class="container">
        <div class="tags-cloud">
            {% for tag in tags %}
                <a href="{{ path('tag_show', {id: tag.tag.id}) }}" class="tag">
                    <div class="name">{{ tag.tag.name }}</div>
                    <div class="count">{{ tag.containerCount }}</div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% extends 'layout/page-center.html.twig' %}

{% block title %}Tag Cloud{% endblock %}

{% block content %}
    <div class="container">
        <div class="d-flex flex-wrap justify-content-center">
            {% for tag in tags %}
                {% set containersCount = tag.containers|length %}
                {% if containersCount > 0 %}
                    <a href="{{ path('tag_show', {id: tag.id}) }}"
                       data-weight="{{ containersCount }}"
                       class="m-1 p-2 border rounded d-flex justify-content-between align-items-start text-body bg-body-tertiary text-decoration-none">
                        <div class="p-1">{{ tag.name }}</div>
                        <div class="p-1 border rounded">{{ containersCount }}</div>
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}